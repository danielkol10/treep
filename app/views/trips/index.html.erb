<div class="bg-image-wrapper" style="background-image:
linear-gradient(-225deg, rgba(186,210,213,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://res.cloudinary.com/druzius/image/upload/v1543828892/emanuel-hahn-200491-unsplash.jpg');"></div>
<br>
<h2>Upcoming Trips</h2>
  <div class="container">
    <div class="row">
        <% @trips.each do |trip| %>
      <div class="col-xs-12 col-sm-4">
        <div class="trip-index-content">
          <div class="trip-card-index-image"></div>
          <div class="trip-card-index-title"><h5><%= trip.city %></h5></div>
          <div class="trip-card-index-description">
            <p><%= trip.start_day %> - <%= trip.end_day %></p>
          </div>
          <div class="trip-card-index-button">
          <a href="#top" class="btn home-button">Do something</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



