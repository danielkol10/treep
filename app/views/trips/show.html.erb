<div class="trip-overview-header">
  <div class="container">
    <div class="trip-overview-title">
      <div class="dynamic-title">
        <h1><%= (@trip.end_day - @trip.start_day).to_i %> days in <%= @trip.city.capitalize %></h1>
      </div>
      <div class="dynamic-date-subtitle">
        <h4><%= @trip.start_day.strftime('%b %d') %> - <%= @trip.end_day.strftime('%b %d, %Y') %></h4>
      </div>

      </div>
    </div>
  </div>

<div class="trip-content-wrapper">
  <div class="container">
    <div class="row">

      <% if @trip.venues.empty? %>
      <h2>No results selected.</h2>
      <% else %>
      <% @trip.venues.each do |venue| %>
      <div class="col-xs-12 col-sm-12">
        <div class="trip-content">

          <div class="trip-card-title"><h3><%= venue.name %></h3></div>
          <div class="trip-card-image">
            <img src= <%= venue.img_url %> >
          </div>
          <div class="trip-card-address"><h5>Address: <%= venue.location %></h5></div>
          <div class="trip-card-description">
            <p><%# venue.description %>A staring contest is a game in which two people stare into each other's eyes and attempt to maintain eye contact for a longer period than their opponent can. The game ends when one participant looks away or smiles.</p>
          </div>
          <a href="#top" class="trip-card-button btn home-button">Do something</a>

        </div>
      </div>
      <% end %>
      <% end %>

      <% if @trip.events.empty? %>
      <h2>No events selected.</h2>
      <% else %>
      <% @trip.events.each do |event| %>
      <div class="col-xs-12 col-sm-12">
        <div class="trip-content">

          <div class="trip-card-title"><h3><%= event.name %></h3></div>
          <div class="trip-card-image">
            <img src='https://res.cloudinary.com/druzius/image/upload/v1543933434/business.jpg'>
          </div>
          <div class="trip-card-address"><h5>Address: <%= event.location %></h5></div>
          <div class="trip-card-description">
            <p><%# venue.description %>A staring contest is a game in which two people stare into each other's eyes and attempt to maintain eye contact for a longer period than their opponent can. The game ends when one participant looks away or smiles.</p>
          </div>
          <a href="#top" class="trip-card-button btn home-button">Do something</a>

        </div>
      </div>
      <% end %>
      <% end %>

